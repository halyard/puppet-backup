export RESTIC_CACHE_DIR=/var/lib/restic

export RESTIC_SOURCE=<%= @source %>
export RESTIC_REPOSITORY=<%= @target %>
export RESTIC_PASSWORD=<%= @password %>
export RCLONE_CONFIG=/etc/restic/rclone/<%= @name %>

<% if @prune -%>
export RESTIC_KEEP_DAILIES=<%= @keep_dailies %>
export RESTIC_KEEP_WEEKLIES=<%= @keep_weeklies %>
<% end -%>

<% unless @args.empty? -%>
export RESTIC_ARGS="<%= @args.map { |x| "'#{x}'" }.join(' ') %>"
<% end -%>

<% @environment.each do |key, value| -%>
export <%= key %>=<%= value %>
<% end -%>

export WATCHDOG_URL=<%= @watchdog_url %>
