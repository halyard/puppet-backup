RESTIC_CACHE_DIR=/var/lib/restic

RESTIC_SOURCE=<%= @source %>
RESTIC_REPOSITORY=<%= @target %>
RESTIC_PASSWORD=<%= @password %>
RCLONE_CONFIG=/etc/restic/rclone/<%= @name %>

RESTIC_KEEP_DAILIES=<%= @keep_dailies %>
RESTIC_KEEP_WEEKLIES=<%= @keep_weeklies %>

<% unless @args.empty? -%>
RESTIC_ARGS="<%= @args.map { |x| "'#{x}'" }.join(' ') %>"
<% end -%>

<% @environment.each do |key, value| -%>
<%= key %>=<%= value %>
<% end -%>

WATCHDOG_URL=<%= @watchdog_url %>
